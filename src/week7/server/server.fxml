<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="week7.server.Controller">
    <AnchorPane VBox.vgrow="ALWAYS">
        <TextArea fx:id="ta" editable="false" layoutX="37.0" layoutY="14.0" prefHeight="280.0" prefWidth="567.0"
                  wrapText="true"/>
        <TextField fx:id="tf" layoutX="37.0" layoutY="316.0" prefHeight="25.0" prefWidth="516.0"
                   promptText="Enter message here..."/>
        <Button fx:id="send" layoutX="561.0" layoutY="316.0" mnemonicParsing="false" onAction="#sendMessage"
                text="Send"/>
    </AnchorPane>
</VBox>
